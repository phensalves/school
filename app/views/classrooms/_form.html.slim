= form_for @classroom  do |f|
  - if @classroom.errors.any?
    #error_explanation
      h2 = "#{pluralize(@classroom.errors.count, "error")} prohibited this classroom from being saved:"
      ul
        - @classroom.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :students_id
    = f.number_field :students_id 
  .field
    = f.label :courses_id
    = f.number_field :courses_id 
  .field
    = f.label :entry_at
    = f.datetime_select :entry_at
  .actions = f.submit
